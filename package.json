{
	"name": "vscode-html-css",
	"displayName": "HTML CSS Support",
	"description": "CSS support for HTML documents",
	"version": "1.1.3",
	"publisher": "ecmel",
	"license": "MIT",
	"homepage": "https://github.com/ecmel/vscode-html-css",
	"bugs": "https://github.com/ecmel/vscode-html-css/issues",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/ecmel/vscode-html-css.git"
	},
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"keywords": [
		"html",
		"css",
		"class",
		"multi-root ready"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"configuration": {
			"title": "CSS Settings",
			"properties": {
				"css.remoteStyleSheets": {
					"type": "array",
					"default": [],
					"description": "A list of remote style sheets.",
					"scope": "resource"
				},
				"css.enabledLanguages": {
					"type": "array",
					"description": "A list of languages where suggestions are desired.",
					"default": [
						"html"
					],
					"scope": "window"
				},
				"css.ignoredFolders": {
					"type": "array",
					"description": "A list of folders to exclude from stylesheet parsing.",
					"default": [
						"**/node_modules/**"
					],
					"scope": "window"
				}
			}
		}
	},
	"main": "./dist/extension.js",
	"scripts": {
		"compile": "tsc -p ./",
		"deploy": "vsce publish",
		"lint": "eslint src --ext ts",
		"package": "vsce package",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "webpack --mode production",
		"watch": "tsc -watch -p ./",
		"webpack-dev": "webpack --mode development --watch",
		"webpack": "webpack --mode development"
	},
	"devDependencies": {
		"@types/chokidar": "^2.1.3",
		"@types/css-tree": "^1.0.4",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node-fetch": "^2.5.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"chokidar": "^3.4.3",
		"css-tree": "^1.1.2",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"node-fetch": "^2.6.1",
		"ts-loader": "^8.0.11",
		"typescript": "^4.0.2",
		"vsce": "^1.81.1",
		"vscode-test": "^1.4.0",
		"webpack-cli": "^4.2.0",
		"webpack": "^5.9.0"
	}
}
