<!-- JavaScript -->
<script>
// Global variables
let currentScreen = 'dashboard';
let points = 120;

// Show a specific screen
function showScreen(screenId) {
// Hide all screens
document.querySelectorAll('.screen').forEach(screen => {
screen.classList.remove('active');
});

// Show the selected screen
document.getElementById(screenId).classList.add('active');
currentScreen = screenId;
}

// Show a modal
function showModal(modalId) {
document.getElementById(modalId).style.display = 'flex';
}

// Hide all modals
function hideModals() {
document.querySelectorAll('.modal').forEach(modal => {
modal.style.display = 'none';
});
}

// Start a quiz
function startQuiz() {
document.getElementById('quiz-section').classList.remove('hidden');
// Scroll to quiz
document.getElementById('quiz-section').scrollIntoView({
behavior: 'smooth',
block: 'start'
});
}

// Award points to the user
function awardPoints(amount) {
points += amount;
document.getElementById('points-counter').innerText = points;
}

// Initialize event listeners
document.addEventListener('DOMContentLoaded', function() {
// Close modals when clicking outside
document.querySelectorAll('.modal').forEach(modal => {
modal.addEventListener('click', function(event) {
if (event.target === modal) {
hideModals();
}
});
});
});

// AI Assistant Simulation
class AIAssistant {
constructor() {
this.learningData = {
style: 'visual',
strengths: ['anglais', 'svt'],
weaknesses: ['physique-chimie'],
interests: ['génétique', 'culture anglophone']
};
}

// Generate personalized recommendations
generateRecommendation() {
// This would be more sophisticated in a real application
if (this.learningData.weaknesses.includes('physique-chimie')) {
return {
subject: 'physique-chimie',
activity: 'Simulation des champs magnétiques',
reason: 'Aide visuelle pour comprendre l\'électromagnétisme'
};
}
return null;
}

// Analyze quiz answers
analyzePerformance(answers) {
// Simplified analysis for demo purposes
return {
score: '80%',
strengths: ['génétique mendélienne'],
weaknesses: ['mutations génétiques'],
